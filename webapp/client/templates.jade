template(name='filters')
  ul.list-group
    li.list-group-item
      h4 Brand Type
      .btn-group(data-toggle='buttons')
        each brandTypes
          label.btn.btn-primary
            input(type='radio', name='brand-type', value=name)
            | #{name}
    li.list-group-item
      h4 Country
      div(data-toggle='buttons')
        each countries
          label.btn.btn-primary
            input(type='radio', name='country', value=name)
            | #{name}
    li.list-group-item
      h4 Sales type
      div(data-toggle='buttons')
        each salesTypes
          label.btn.btn-primary
            input(type='radio', name='sales-type', value=value)
            | #{name}
    li.list-group-item
      h4 Date Range
      div(data-toggle='buttons')
        each dateRanges
          label.btn.btn-primary
            input(type='radio', name='date-range', value=name)
            | #{name}
      |       weeks
