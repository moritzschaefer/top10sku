template(name="dataTable")
  .table-responsive
    table.table.table-striped
      thead
        tr
          th Top
          th Category
          th Valid Purchases
          th Revenues
          th Revenues in % of Total
      tbody
        each data
          tr
            td #{top}
            td
              a(href="{{ pathFor route='subCategories.show' }}") #{name}
            td #{validPurchases}
            td #{revenues}
            td {{revenuesPerTotal revenues}}
